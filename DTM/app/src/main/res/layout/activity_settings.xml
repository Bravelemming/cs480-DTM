<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="std.dtm.Settings">

    <Switch
        android:id="@+id/timerswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Timer?" />

    <Switch
        android:id="@+id/freeplayswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/timerswitch"
        android:layout_below="@+id/timerswitch"
        android:layout_marginTop="50dp"
        android:text="Free Play?" />


    <ImageButton
        android:id="@+id/buttonMainMenu"
        android:src="@drawable/dtm_button_main_menu"
        android:background="@null"
        android:layout_width="255dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        android:layout_marginTop="125dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/freeplayswitch" />
</RelativeLayout>
