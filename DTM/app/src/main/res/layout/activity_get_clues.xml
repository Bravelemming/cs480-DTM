<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="std.dtm.GetClues">

    <ImageButton
        android:id="@+id/nextmoviebutton"
        android:src="@drawable/dtm_button_not_my_movie"
        android:background="@null"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="55dp" />

    <ImageButton
        android:id="@+id/submitbutton"
        android:src="@drawable/dtm_button_give_up"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:layout_alignStart="@+id/nextmoviebutton" />

    <ImageButton
        android:id="@+id/guessmoviebutton"
        android:src="@drawable/dtm_button_guess"
        android:background="@null"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/submitbutton"
        android:layout_marginBottom="55dp" />

    <TextView
        android:id="@+id/guesstextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clueonebutton"
        android:layout_alignStart="@+id/clueonebutton"
        android:layout_marginBottom="14dp"
        android:text="When you think you have it, hit guess! " />

    <ImageButton
        android:id="@+id/clueonebutton"
        android:src="@drawable/dtm_button_clue1_summary"
        android:background="@null"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/nextmoviebutton"
        android:layout_marginStart="28dp" />

    <ImageButton
        android:id="@+id/cluetwobutton"
        android:src="@drawable/dtm_button_clue2_cast"
        android:background="@null"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/nextmoviebutton"
        android:layout_alignStart="@+id/clueonebutton" />

    <ImageButton
        android:id="@+id/cluethreebutton"
        android:src="@drawable/dtm_button_clue3_writer_director"
        android:background="@null"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        android:layout_alignStart="@+id/cluetwobutton"
        android:layout_alignTop="@+id/submitbutton" />

    <ImageButton
        android:id="@+id/cluefourbutton"
        android:src="@drawable/dtm_button_clue4_production_release"
        android:background="@null"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/submitbutton"
        android:layout_alignStart="@+id/cluethreebutton" />

    <ImageButton
        android:id="@+id/cluefivebutton"
        android:src="@drawable/dtm_button_clue5_genre_rating"
        android:background="@null"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        android:layout_alignStart="@+id/cluefourbutton"
        android:layout_alignTop="@+id/guessmoviebutton" />

    <ImageButton
        android:id="@+id/cluesixbutton"
        android:src="@drawable/dtm_button_clue6_awards"
        android:background="@null"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/guessmoviebutton"
        android:layout_alignStart="@+id/cluefivebutton" />

    <TextView
        android:id="@+id/displaytextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guesstextview"
        android:layout_alignStart="@+id/guesstextview"
        android:text="" />

</RelativeLayout>
